{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "types": ["node", "react", "hammerjs"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app.config.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
